# small zsh function to determine a remote bind version

bind_release() {
	echo "Domain: $1"
	for ns in $(host -t ns $1|awk '{print $4}'); do
		echo -n "$ns: "
		dig @$ns version.bind. txt CHAOS | 
			grep "^V" | 
			awk -F '\t' '{print $6}' | 
			sed 's/"//g' |
			perl -pe 's/\n//g'
		echo
	done
}
# vim:set ft=zsh tw=78:
